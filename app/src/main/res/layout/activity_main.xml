<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_main">
        <tam.pa.galeriislam.RoundRectCornerImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/img_bg_main"
            android:scaleType="fitXY"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:background="@drawable/right_radius">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_logo"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            />
        <View
            android:layout_width="4dp"
            android:layout_height="45dp"
            android:background="@color/colorYellow"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Ramadhan \n1441"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            tools:ignore="RtlCompat"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/list_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="30dp"
        >
        <TextView
            android:id="@+id/tv_lainnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lainnya.."
            android:textSize="12dp"
            android:textColor="@color/colorBlue"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            />
        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_below="@+id/tv_lainnya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="3dp"
                android:background="@drawable/shadows_blue"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_blue">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kisah Nabi"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_orange"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malaikat"
                    android:textSize="14dp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="20dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <RelativeLayout
                android:id="@+id/relatif"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_red"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kisah Sahabat"
                    android:textSize="14dp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_yellow"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asmaul Husna"
                    android:textSize="14dp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_pilih_kisahnya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih kisanya"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/list_menu"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative_search"
        android:layout_below="@+id/tv_pilih_kisahnya"
        />
    <RelativeLayout
        android:id="@+id/relative_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fab"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:padding="10dp">
        <EditText
            android:id="@+id/et_search"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="false"
            android:shadowColor="#FFFFFF"
            android:singleLine="true"
            android:textSize="14sp"
            android:visibility="gone"
            android:drawableEnd="@drawable/ic_search"
            android:backgroundTint="@color/colorTransparant"
            android:hint="Type here..." />
        <ImageView
            android:id="@+id/img_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/et_search"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search"/>
    </RelativeLayout>

</RelativeLayout>